version 16
__lua__
dbg_show_raycasts=false
dbg_frame_advance=false

function onkey(key)
	if key=="r" then
		dbg_show_raycasts=
			not dbg_show_raycasts
	elseif key=="m" then
		dbg_frame_advance=
			not dbg_frame_advance
	end
end

function _init()
	poke(0x5f2d,1)

	dbg_raycasts={}

	world={}
	world.grav=0.8
	
	cam={}
	cam.x=64
	cam.y=64
	
	plr=new_entity(64,64,6,5)
end

function _update()
	clear_dbg_raycasts()

	if (stat(30)) onkey(stat(31))

	if dbg_frame_advance then
		return
	end

	inp={
		dx=0,dy=0,
		jump=false,
	}
	
	if (btn(0)) inp.dx-=1
	if (btn(1)) inp.dx+=1
	if (btn(2)) inp.dy-=1
	if (btn(3)) inp.dy+=1
	if (btnp(4)) inp.jump=true

	entity_move(plr,inp)
	
	if plr.x>cam.x+8 then
		cam.x=plr.x-8
	elseif plr.x<cam.x-8 then
		cam.x=plr.x+8
	end
	
	btnpoll()
end

function _draw()
	cls()
	
	camera(cam.x-64,cam.y-64)
	print("ì›ƒ",plr.x-plr.hw,plr.y-plr.hh,7)
	pset(plr.x,plr.y,8)
	map(0,0,0,0,32,16)
	
	draw_dbg_raycasts()
	
	camera()
end

function new_entity(x,y,w,h,prop)
	local self={}
	prop=prop or {}
	self.x=x or 0
	self.y=y or 0
	self.w=w or 1
	self.h=h or 1
	self.hw=flr(self.w/2)
	self.hh=flr(self.h/2)
	self.dx=0
	self.dy=0
	self.ground=false
	self.k_grndacl=0.6
	self.k_airacl=0.3
	self.k_grndfric=0.3
	self.k_airfric=0.01
	self.k_fallmx=8
	self.k_jmpforce=6
	self.k_mvspdmx=3.2
	return self
end

function entity_move(self,inp)
	inp=inp or {}
	local mx,my=inp.dx or 0,
		inp.dy or 0

	self.dy+=world.grav
	
	if self.dy>self.k_fallmx then
		self.dy=self.k_fallmx
	end
	
	local hit,d=entity_ground_check(self)

	if hit then
		self.dy=d
		self.ground=true
	else
		self.ground=false
	end
	
	if self.ground and inp.jump
	then
		self.dy=-self.k_jmpforce
	end
 
 if self.dy<0 then
 	local hit,d=cast_up(
 		self.x,self.y-self.hh,
 		-self.dy)
 		
 	if (hit) self.dy=-d
 end
	
	local acl=self.k_grndacl
	if not self.ground then
		acl=self.k_airacl
	end
	acl*=mx
	self.dx+=acl
	
	local fric=self.k_grndfric
	if not self.ground then
		fric=self.k_airfric
	end
	self.dx=moveto(self.dx,0,fric)
	
	if self.dx<0 then
 	local left,ld=cast_left(
 		self.x-self.hw,self.y,
 		-self.dx)
 		
 	if (left) self.dx=-ld
 elseif self.dx>0 then
 	local right,rd=cast_right(
 		self.x+self.hw,self.y,
 		self.dx)

		if (right) self.dx=rd 	
 end
 
 self.dx=clamp(self.dx,
 	-self.k_mvspdmx,
 	self.k_mvspdmx)
	
	self.x+=self.dx
	self.y+=self.dy
end

function entity_ground_check(self)
	local left,ld=cast_down(
		self.x-2,self.y+self.hh+1,
		self.dy)
		
	local right,rd=cast_down(
		self.x+2,self.y+self.hh+1,
		self.dy)
		
	return left or right,
		min(ld,rd)		
end

function cast_right(ox,oy,d,s)
	s=s or 1
	
	add_dbg_raycast(ox,oy,d,1)
	
	for x=ox,ox+d,s do
		if point_solid(x,oy) then
			return true,x-ox
		end
	end
	return false
end

function cast_left(ox,oy,d,s)
	s=s or 1

	add_dbg_raycast(ox,oy,d,0)

	for x=ox,ox-d,-s do
		if point_solid(x,oy) then
			return true,ox-x
		end
	end
	return false
end

function cast_down(ox,oy,d,s)
	s=s or 1
	
	add_dbg_raycast(ox,oy,d,3)
	
	for y=oy,oy+d,s do
		if point_solid(ox,y) then
			return true,y-oy
		end
	end
	return false
end

function cast_up(ox,oy,d,s)
	s=s or 1
	
	add_dbg_raycast(ox,oy,d,2)
	
	for y=oy,oy-d,-s do
		if point_solid(ox,y) then
			return true,oy-y
		end
	end
	return false
end

function cell_solid(cx,cy)
	return fget(mget(cx,cy),0)
end

function point_solid(x,y)
	return cell_solid(flr(x/8),
		flr(y/8))
end

function
add_dbg_raycast(ox,oy,d,cdir)
	if not dbg_show_raycasts then
		return
	end

	local fx,fy=ox,oy
	if cdir==0 then
		fx=ox-d
	elseif cdir==1 then
		fx=ox+d
	elseif cdir==2 then
		fy=oy-d
	elseif cdir==3 then
		fy=oy+d
	end
	add(dbg_raycasts,
		{ox=ox,oy=oy,fx=fx,fy=fy})
end

function clear_dbg_raycasts()
	local n=#dbg_raycasts
	for i=1,n do
		dbg_raycasts[i]=nil
	end
end

function draw_dbg_raycasts()
	for i=1,#dbg_raycasts do
		local r=dbg_raycasts[i]
		line(r.ox,r.oy,r.fx,r.fy,11)
	end	
end

function moveto(i,f,r)
	if i>f then
		return max(i-r,f)
	elseif i<f then
		return min(i+r,f)
	else
		return f
	end
end

function clamp(v,mn,mx)
	if (mn>mx) mn,mx=mx,mn
	if v<mn then
		return mn
	elseif v>mx then
		return mx
	else
		return v
	end
end

function clamp01(v)
	return clamp(v,0,1)
end

btnpd=btnp

_btns={}
function btnpoll()
	for i=0,5 do
		_btns[i]=btn(i)
	end
end

function btnp(b)
	return btn(b) and not _btns[b]
end

function btnr(b)
	return not btn(b) and _btns[b]
end
