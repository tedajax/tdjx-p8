-- utilities

function lerp(a,b,t)
	return a+(b-a)*t
end

function clamp(v,mn,mx)
	if (mn>mx) mn,mx=mx,mn
	return max(min(v,mx),mn)
end

function clamp01(v)
	return clamp(v,0,1)
end

function len(x,y)
	return sqrt(x*x+y*y)
end

function norm(x,y)
	local l=len(x,y)
	if (l>0)	return x/l,y/l
	return 0,0
end
	
