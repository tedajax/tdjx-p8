__lua__
function px_y(y,b,t)
	return 128-(y-b)/(t-b)*128
end

function plot(fn,l,r,b,t,c)
	local last=nil
	for px=0,127 do
		local fx,fy=0,0
		fx=(r-l)*(px/127)+l
		if type(fn)=="function" then
			fy=fn(fx)
		else
			fy=fn
		end
		if last~=nil then
			line(px-1,px_y(last,b,t),
				px,px_y(fy,b,t),c or 9)
		end
		last=fy
	end
end

function f00(x) return 14 end
function f01(x) return x end

function f02(x) 
	if x<0.25 or x>0.75 then
		return 14
	else return 15 end
end

function f03(x)
	return -4*x*(x-1)
end

function f04(x)
	return flr(f03(x)*1.1)+14
end

function _draw()
	cls()
	plot(14,0,1,13,16,6)
	plot(15,0,1,13,16,6)
	plot(16,0,1,13,16,6)
--	plot(f00,-1,1,-1,1)
--	plot(f01,-1,1,-1,1)
	plot(f02,0,1,13,16)
	plot(f03,0,1,0,1,12)
	plot(f04,0,1,13,16,12)
end
