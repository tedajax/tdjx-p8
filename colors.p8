function _init()
	idx=0
end

function _update()
	if btnp(4) then
		idx=(idx+1)%2
		
		for i=0,15 do
			pal(i,(idx*128)+i,1)
		end
	end
end

function _draw()
	cls()

	for c=0,15 do
		local x=c%4*32
		local y=flr(c/4)*32
		rectfill(x,y,x+31,y+31,c)
	end
end
