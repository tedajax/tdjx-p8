version 18
__lua__
#include algebra.p8
#include testing.p8

function _init()
	cls()
	
	tf=harness:new()
	
	tf:add_test("add vec3",test_vec3_add)
	tf:add_test("sub vec3",test_vec3_sub)
	
	tf:run_tests()
	
	stop()
end

function test_vec3_add()
	local a=vec3:new(1,2,4)
	local b=vec3:new(8,16,32)
	
	a=a+b
	
	test.equal(a.x,9)
	test.equal(a.y,18)
	test.equal(a.z,36)
	
	test.is_false(a==b)
end

function test_vec3_sub()
	local a=vec3:new(8,16,32)
	local b=vec3:new(1,2,4)
	
	a=a-b
	
	test.equal(a.x,7)
	test.equal(a.y,14)
	test.equal(a.z,28)
	
	test.is_false(a==b)
end
