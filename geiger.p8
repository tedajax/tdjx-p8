pico-8 cartridge // http://www.pico-8.com
version 18
__lua__
#include util.p8

function _init()
	chance=0.05
end

function _update()
	clear_watches()
	
	
	watch("chance:"..chance)
	
	if btnp(2) then
		chance-=0.01
	elseif btnp(3) then
		chance+=0.01
	end
	chance=mid(chance,0,1)
	
	if rnd()<chance then
		sfx(0)
	end
end

function _draw()
	cls()
	draw_watches()
end
